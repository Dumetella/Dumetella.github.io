{
  "name": "react-ts-template",
  "version": "1.0.0",
  "description": "lightweight alternative to create-react-app",
  "scripts": {
    "start": "webpack serve --mode development --progress --hot --config ./configs/webpack.config.development.js",
    "build": "webpack --mode production --config ./configs/webpack.config.production.js",
    "lint": "eslint --config ./configs/.eslintrc.json . --ext .ts,.tsx",
    "lint:fix": "eslint --config ./configs/.eslintrc.json . --ext .ts,.tsx --fix",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "deploy": "gh-pages -d dist"
  },
  "keywords": [
    "react",
    "typescript"
  ],
  "author": "Dumetella",
  "license": "ISC",
  "devDependencies": {
    "@types/jest": "^27.0.2",
    "@types/mini-css-extract-plugin": "^2.4.0",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "@types/styled-components": "^5.1.15",
    "@types/webpack": "^5.28.0",
    "@typescript-eslint/eslint-plugin": "^5.3.0",
    "@typescript-eslint/parser": "^5.3.0",
    "clean-webpack-plugin": "^4.0.0",
    "copy-webpack-plugin": "^9.0.1",
    "css-loader": "^6.4.0",
    "eslint": "^8.1.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.2.2",
    "file-loader": "^6.2.0",
    "gh-pages": "^3.2.3",
    "html-webpack-plugin": "^5.4.0",
    "jest": "^27.3.1",
    "mini-css-extract-plugin": "^2.4.2",
    "postcss": "^8.3.11",
    "postcss-loader": "^6.2.0",
    "postcss-preset-env": "^6.7.0",
    "sass": "^1.43.4",
    "sass-loader": "^12.3.0",
    "style-loader": "^3.3.1",
    "terser-webpack-plugin": "^5.2.4",
    "ts-jest": "^27.0.7",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1"
  },
  "dependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-icons": "^4.3.1",
    "styled-components": "^5.3.3",
    "styled-normalize": "^8.0.7"
